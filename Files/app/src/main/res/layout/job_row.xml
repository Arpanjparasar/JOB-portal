<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/TV_jobtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/jobtitle"
            android:textColor="@color/bluehead"
            android:textStyle="bold"
            android:text="Android Developer"
            android:drawableRight="@drawable/ic_walkin"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/TV_companyname"
            android:layout_below="@+id/TV_jobtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Tata Consultancy Services"
            android:drawableRight="@drawable/ic_written"
            android:drawableLeft="@drawable/ic_vcompany"
            android:drawablePadding="2dp"
            android:textColor="@color/black"
            android:paddingBottom="2dp"/>


        <TextView
            android:id="@+id/TV_location"
            android:layout_below="@+id/TV_companyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Kolkata,India"
            android:drawableRight="@drawable/ic_online"
            android:drawableLeft="@drawable/ic_vloc"
            android:drawablePadding="2dp"
            android:paddingBottom="2dp"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>